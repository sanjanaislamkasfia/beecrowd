#include<bits/stdc++.h>
#include<iostream>
using namespace std;
int main(){
    int x,y;
    double price=0.0;
    cin>>x>>y;
    if(x==1){
      price=y * 4.00;
    }
     else if(x==2){
      price=y * 4.50;
    }
     else if(x==3){
      price=y * 5.00;
    }
     else if(x==4){
      price=y * 2.00;
    }
     else if(x==5){
       price=y * 1.50;
    }
    cout<<fixed<<setprecision(2)<<"Total: R$ "<<price<<endl;
    return 0;
}

#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int main() {
    int A, N;

    // Reading input values in one line
    cin >> A;
    
    // Continue reading values until we get a valid N (N > 0)
    while (true) {
        cin >> N;
        if (N > 0) break;
    }
    
    // Calculate the sum of N numbers starting from A
    int sum = 0;
    for (int i = 0; i < N; i++) {
        sum += A + i;
    }
    
    // Print the result
    cout << sum << endl;
    
    return 0;
}

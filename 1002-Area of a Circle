#include<bits/stdc++.h>
#include<iomanip> //This library is used for setting precision. However, since we are already using the STL library, we can skip this line.
#include<iostream>
using namespace std;
int main(){
    double A,r= 3.14159,R;
    cin>>R;
    A=r*R*R;
    cout<<fixed<<setprecision(4)<<"A="<<A<<endl;
    return 0;
}

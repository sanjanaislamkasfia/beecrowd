#include<bits/stdc++.h>
#include<iostream>
using namespace std;
int main(){
    int count1=0,count2=0,count3=0,count4=0;
    int arr[5];
    for(int i=0;i<5;i++){
        cin>>arr[i];
    if(arr[i]%2 == 0){
        count1++;
    }else{
        count2++;
    }
    
    if(arr[i]>0){
        count3++;
    }else if(arr[i]<0){
        count4++;
    }
    }
     cout<<count1<<" valor(es) par(es)"<<endl;
     cout<<count2<<" valor(es) impar(es)"<<endl;
     cout<<count3<<" valor(es) positivo(s)"<<endl;
     cout<<count4<<" valor(es) negativo(s)"<<endl;
    return 0;
}

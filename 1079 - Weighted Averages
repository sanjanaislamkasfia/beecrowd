#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int main() {
    int N;
    cin>>N;
    for (int i=0;i<N;i++){
        float a,b,c;
        cin>>a>>b>>c;
        float weighted_avg = (a * 2 + b * 3 + c * 5) / 10.0;
        cout<<fixed<<setprecision(1)<<weighted_avg<<endl;
    }
    return 0;
}

#include<bits/stdc++.h>
#include<iostream>
using namespace std;
int main(){
    double x,y,z;
    cin>>x>>y>>z;
    if(x+y>z && y+z>x && z+x>y){
        cout<<fixed<<setprecision(1)<<"Perimetro = "<<x+y+z<<endl;
    }else {
        cout<<fixed<<setprecision(1)<<"Area = "<<((x+y)*z)/2<<endl;
    }
    return 0;
}
